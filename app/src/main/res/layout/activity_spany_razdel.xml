<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpanyRazdelActivity">

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/фон"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/original" />

        <ImageView
            android:id="@+id/фон_фон"
            android:layout_width="400dp"
            android:layout_height="725dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/desain6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Росиса"
                        android:layout_width="370dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/spanybutton" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/Фон_Амогус"
                            android:layout_width="330dp"
                            android:layout_height="530dp"
                            android:layout_marginLeft="40dp"
                            app:srcCompat="@drawable/desain5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="347dp"
                                android:layout_height="482dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ScrollView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:id="@+id/HramSvatogoFamily"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                app:srcCompat="@drawable/hhhramsvatogosemeistva" />

                                            <ImageView
                                                android:id="@+id/gotKvartal"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                app:srcCompat="@drawable/gggot" />

                                            <ImageView
                                                android:id="@+id/MyseiPicaso"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                app:srcCompat="@drawable/mmmyseipicaso" />

                                            <ImageView
                                                android:id="@+id/Sevilia"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                app:srcCompat="@drawable/sssevilia" />

                                            <ImageView
                                                android:id="@+id/PISpany"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                app:srcCompat="@drawable/pppispany" />

                                            <ImageView
                                                android:id="@+id/KorolDvorecAlcasar"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                app:srcCompat="@drawable/aaalkasar" />

                                        </LinearLayout>
                                    </ScrollView>

                                </LinearLayout>

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal">

                                <Button
                                    android:id="@+id/Glavnoemenustran"
                                    android:layout_width="203dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="95dp"
                                    android:layout_marginTop="35dp"
                                    android:gravity="center"
                                    android:text="Главное меню стран" />

                            </FrameLayout>
                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Достопримечательности"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>