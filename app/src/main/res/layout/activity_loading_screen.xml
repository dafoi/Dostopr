<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/original" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

          <FrameLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_gravity="center">

            <ImageView
                android:id="@+id/задний_задний_фон_для_сёрч"
                android:layout_width="417dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/desain1" />

            <ImageView
                android:id="@+id/Задний_фон_сёрч"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/desian2" />

            <ImageView
                android:id="@+id/сам_сЁрч"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/search" />
          </FrameLayout>

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                <ImageView
                    android:id="@+id/goRussia"
                    android:layout_width="361dp"
                    android:layout_height="103dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/razdel" />

                <ImageView
                    android:id="@+id/goSpany"
                    android:layout_width="360dp"
                    android:layout_height="103dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/spanybutton" />
              </LinearLayout>
            </ScrollView>

          </FrameLayout>
        </LinearLayout>

      </FrameLayout>

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:id="@+id/нижний_фон_для_акк"
            android:layout_width="410dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:rotationX="180"
            android:src="@drawable/desain1" />

        <ImageButton
            android:id="@+id/goAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/iconavtor" />
      </FrameLayout>

    </LinearLayout>

  </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>